<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuRefugioActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/descripcionfondo"
        android:scaleType="centerCrop"
        android:src="@drawable/fondomenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/btnback"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:layout_margin="28dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/btnExit"
        android:padding="13sp"
        android:scaleType="centerCrop"
        android:src="@drawable/iconosalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:textColor="#757575"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="@+id/backgroundImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="381dp"
        android:layout_height="144dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logorefugio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        tools:ignore="VisualLintBounds" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintVertical_bias="1.0">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:padding="12dp"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="1dp">


                <ImageButton
                    android:id="@+id/btnMisAnimales"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/iconoboton"
                    android:contentDescription="@string/botonmisanimales"
                    android:padding="19dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iconomismascotas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/misanimales"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="1dp"
                android:paddingEnd="10dp">

                <ImageButton
                    android:id="@+id/btnReportes"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/iconoboton"
                    android:contentDescription="@string/botonreportes"
                    android:padding="19dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iconoreportes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/reportes"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="1dp">

                <ImageButton
                    android:id="@+id/btnSolicitudes"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/iconoboton"
                    android:contentDescription="@string/botonSolicitudes"
                    android:padding="19dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iconosolicitud" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/solicitudes"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="1dp"
                android:paddingEnd="10dp">

                <ImageButton
                    android:id="@+id/btnPerfilRefugio"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/iconoboton"
                    android:contentDescription="@string/botonperfil"
                    android:padding="19dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iconoperfilrefugio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/refugios"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>


        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>